@{
    ViewBag.Title = "AngularJsCalls";
}

<div ng-app="app.main" ng-controller="proxyCtrl as ctrl">
    <div class="row">
        <div class="col-md-12">
            <h3>
                AngularJs Proxy Calls
            </h3>
        </div>
        <div class="col-md-12">
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <a ng-click="ctrl.startTypeScriptServiceCalls()" class="btn btn-default btn-block">Test TypeScript Service Calls</a>
        </div>
        <div class="col-md-3 col-md-offset-6">
            <a ng-click="ctrl.startJavaScriptServiceCalls()" class="btn btn-default btn-block">Test JavaScript Service Calls</a>
        </div>
        <div class="col-md-12">
            <br/>
            <p class="text-center"><strong>Please open the Chrome developer Console to see the service Calls and returned Objects.</strong>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Datei Upload Tests für AngularJs</h3>
            <p>The IIS tries to store the uploaded files in the diretory: "C:\Temp\"</p>
            <br />
            <br/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <input type="file" class="form-control input-sm" name="fujavaScript" sq-file-model="ctrl.fileImportDataTypeScript" ng-model="ctrl.fileImportDataTypeScript"/>
        </div>
        <div class="col-md-3">
            <a ng-click="ctrl.startFileUploadTypeScript()" class="btn btn-sm btn-default btn-block">Test FileUpload TypeScript</a>
        </div>
        <div class="col-md-3">
            <input type="file" class="form-control input-sm" name="fujavaScript" sq-file-model="ctrl.fileImportDataJavaScript" ng-model="ctrl.fileImportDataJavaScript"/>
        </div>
        <div class="col-md-3">
            <a ng-click="ctrl.startFileUploadJavaScript()" class="btn btn-sm btn-default btn-block">Test FileUpload JavaScript</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12"><hr/></div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <a ng-click="ctrl.startFileDownloadCompanyTypeScript()" class="btn btn-sm btn-default btn-block">Test FileDownload Company TypeScript</a>
        </div>
        <div class="col-md-4">
            <a ng-click="ctrl.startFileDownloadPersonTypeScript()" class="btn btn-sm btn-default btn-block">Test FileDownload Person TypeScript</a>
        </div>
        <div class="col-md-4">
            <a ng-click="ctrl.startFileDownloadNoParamsTypeScript()" class="btn btn-sm btn-default btn-block">Test FileDownload NoParams TypeScript</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12"><hr /></div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <a ng-click="ctrl.startFileDownloadCompanyJavaScript()" class="btn btn-sm btn-default btn-block">Test FileDownload Company JavaScript</a>
        </div>
        <div class="col-md-4">
            <a ng-click="ctrl.startFileDownloadPersonJavaScript()" class="btn btn-sm btn-default btn-block">Test FileDownload Person JavaScript</a>
        </div>
        <div class="col-md-4">
            <a ng-click="ctrl.startFileDownloadNoParamsJavaScript()" class="btn btn-sm btn-default btn-block">Test FileDownload NoParams JavaScript</a>
        </div>
    </div>
</div>